<%= form_for(@note, :url => book_chapter_element_notes_path(@book, @chapter, params[:element_id]), :remote => true) do |f| %>
  <p>
    <strong><%= f.label :text, "Leave a note:" %></strong><br>
    <%= f.text_area :text, :cols => 80, :rows => 5 %>
  </p>
  
  <p>
    <%= f.submit "Leave Note" %>
  </p>
<% end %>