<div class='row'>
  <div id='chapter' class='content col-md-7'>
    <h1><%= link_to @chapter.book.title, @chapter.book %></h1>

    <% if @chapter.part == "mainmatter" %>
      <h2>Chapter <%= @chapter.position %> - <%= @chapter.title %></h2>
    <% else %>
      <h2><%= @chapter.title %></h2>
    <% end %>

    <%= link_to "All notes for this chapter", book_chapter_notes_path(@book, @chapter) %>
    <hr>
    <%= render_elements(@chapter.elements) %>
  </div>

  <div class='col-md-4' id='sidebar'>
    <strong><%= previous_chapter_link %></strong>
    <hr>
    <ul id='section_listing'>
    </ul>
    <hr>
    <strong><%= next_chapter_link %></strong>
  </div>
</div>



<script>create_section_listing();</script>
