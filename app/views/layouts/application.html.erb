<!DOCTYPE html>
<html>
  <head>
    <title>Twist</title>
    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <%= flash[:notice] %>
    <%= flash[:alert] %>

    <menu>
      <% if user_signed_in? %>
        <%= link_to "Sign out", user_session_path, :method => :delete %>
      <% else %>
        <%= link_to "Sign in", new_user_session_path %>
      <% end %>
    </menu>

    <div class='wrapper'>
      <%= yield %>
    </div>

  </body>
</html>
